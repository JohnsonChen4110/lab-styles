<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4b2e83</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#b7a57a</item>
    </style>
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#4b2e83</item>
    </style>

    <style name="Label" parent="@style/TextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Gold" parent="@style/Label">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#b7a57a</item>
    </style>

    <style name="Button" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
